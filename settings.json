{
    "workbench.colorTheme": "Valenca",
    "workbench.activityBar.visible": false,
    "workbench.sideBar.location": "right",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.tree.indent": 20,
    "workbench.startupEditor": "none",
    "workbench.tips.enabled": false,
    
    "material-icon-theme.folders.theme": "classic",
    "material-icon-theme.folders.color": "#FBC02D",

    "editor.fontFamily": "Fira Code",
    "editor.fontLigatures": true,
    "editor.fontWeight": "500",
    "editor.mouseWheelZoom": true,
    "editor.overviewRulerBorder": false,
    "editor.cursorSmoothCaretAnimation": true,
    "editor.cursorWidth": 2,
    "editor.scrollbar.vertical": "hidden", 
    "editor.scrollbar.verticalScrollbarSize": 0,
    "editor.renderControlCharacters": false,
    "editor.insertSpaces": true,
    "editor.tabSize": 4,
    "editor.detectIndentation": false,

    "breadcrumbs.enabled": false,
    "breadcrumbs.symbolPath": "on",

    "files.restoreUndoStack": true,
    
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.cursorWidth": 2,

    "window.titleBarStyle": "custom",
    "window.titleSeparator": "  â€”  ",
    "window.title": "${dirty}${rootName}${separator}${activeEditorMedium}",
    "window.zoomLevel": 0,

    "zenMode.centerLayout": true,
    "zenMode.hideActivityBar": true,

    "javascript.updateImportsOnFileMove.enabled": "always",

    "[csharp]": {
        "editor.renderIndentGuides": false
    },

    "files.exclude": {
        "**/obj":true,
        "**/node_modules":true,
        "**/.vs": true,
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true
    },

    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true
    },

    "explorer.decorations.colors": true,
    "explorer.decorations.badges": false,

    "terminal.external.windowsExec": "C:\\Program Files\\Cmder\\Cmder.exe",
    "terminal.integrated.shell.windows": "C:\\WINDOWS\\sysnative\\cmd.exe",
    "terminal.integrated.shellArgs.windows": [
        "/K",
        "C:\\Program Files\\Cmder\\vendor\\init.bat"
    ],
    "editor.snippetSuggestions": "top",
    "editor.suggestSelection": "first",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue"
}